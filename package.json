{
  "name": "monadical",
  "version": "3.4.0",
  "description": "A set of monadic data types",
  "scripts": {
    "build": "scripts/build",
    "test": "scripts/test",
    "prepare": "npm run build"
  },
  "files": [
    "*.js",
    "*.js.map",
    "*.d.ts"
  ],
  "author": "Antonio G. Greco",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/agreco/monadical"
  },
  "devDependencies": {
    "@types/co": "^4.6.2",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.8",
    "co": "^4.6.0",
    "jest": "^24.9.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3",
    "uglify-js": "^3.6.0"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/?(*.)+(test).[t]s"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "dist"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  }
}
