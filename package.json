{
  "name": "monadical",
  "version": "4.1.1",
  "description": "A set of monadic data types",
  "scripts": {
    "build": "scripts/build",
    "lint": "scripts/lint",
    "prepare": "npm run build",
    "prettier": "scripts/prettier",
    "test": "scripts/test"
  },
  "files": [
    "*.js",
    "*.js.map",
    "*.d.ts"
  ],
  "author": "Antonio G. Greco",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/agreco/monadical"
  },
  "devDependencies": {
    "@types/co": "^4.6.2",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.8",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "co": "^4.6.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3",
    "uglify-js": "^3.6.0"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/?(*.)+(test).[t]s"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "dist"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier && npm run lint",
      "pre-push": "npm test"
    }
  }
}
